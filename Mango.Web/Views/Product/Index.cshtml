@model IEnumerable<Mango.Web.Models.ProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="ProductCreate">Create New</a>
</p>
<form>
    <div class="container row">

        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-white-50 text-center py-2">
                            @item.Name
                        </h3>
                        <img src="@item.ImageUrl" class="card-img-top" width="600" height="400" />

                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px">@string.Format("{0:c}",@item.Price)</span>
                                <span class="badge bg-warning text-white p-2">@item.CategoryName</span>
                            </div>
                            <p class="card-text"> Thiss is description of product here and this is a: here @item.Description product</p>

                            <div class="row">
                                <div class="col">
                                    <a asp-action="Detail" asp-route-productId="@item.ProductId" class="btn btn-outline-success form-control">View</a>
                                </div>
                            </div>




                        </div>
                    </div>
                </div>
            </div>

        }


    </div>
</form>